<div class="container">
  <form action="/record/create" method="POST">
    <div class="form-group">
      <label for="expense"></label>
      <input type="text" class="form-control" id="expense" name="name" placeholder="支出項目" autocomplete="off"
        maxlength="12" list="new-item" required>
      <datalist id="new-item">
        <option value="早餐">
        <option value="午餐">
        <option value="晚餐">
        <option value="捷運">
        <option value="房租">
        <option value="加油">
      </datalist>
    </div>
    <div class="form-group">
      <label for="date"></label>
      <input type="date" class="form-control new-date" id="date" name="date" placeholder="日期" autocomplete="on"
        required>
    </div>
    <div class="form-group">
      <label for="new-category"></label>
      <select id="new-category" class="form-control" name="category" required>
        {{#each categoryList}}
        <option value="{{this._id}}" {{#if_idEqual this._id ../category}}selected{{/if_idEqual}}>
          {{this.name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="form-group">
      <label for="amount"></label>
      <input type="text" class="form-control" id="amount" name="amount" placeholder="金額" required>
    </div>

    <!-- 新增 店家欄位 -->
    <div class="form-group">
      <label for="amount"></label>
      <input type="text" class="form-control" id="merchant" name="merchant" placeholder="店家" required>
    </div>

    <button class="btn btn-primary" type="submit" class="btn mt-3"> 送出
    </button>

  </form>
</div>